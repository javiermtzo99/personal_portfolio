---
import Layout from '../layouts/Layout.astro';
import Modal from '../components/Modal.astro';
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

interface Entry {
  data: CollectionEntry<'about'>['data'];
  Content: any;
}

const raw = await getCollection('about');
const entries: Entry[] = await Promise.all(
  raw.map(async entry => {
    const { Content } = await render(entry);
    return { data: entry.data, Content };
  })
);

// Sort entries by order in ascending order
entries.sort((a, b) => a.data.order - b.data.order);
---

<Layout>
  <!-- single global Modal instance -->
  <Modal title="" icon={entries[0]?.data.icon} />
  <div class="about">
    <div class="about-content">
      <h2>About</h2>
      <hr />
      <div class="bio">
        <p>
          I’m a Data Engineer with a Master’s in Data Science and a bit over 2 years of professional experience. Right now, I’m working in the sports industry at Two Circles. I’m always looking to write cleaner code, pick up the latest technologies and get better at building end-to-end data solutions. I like trying out different approaches and learning new tools along the way. Next, I’d love to grow into a Solutions/Data Architect role.
        </p>
      </div>
      <h3>What I do!</h3>
      <div class="about-content-all-cards">
        {entries.map(entry => {
          const { data, Content } = entry;
          return (
            <div class="about-content-card">
              <!-- hidden MD content for the modal -->
              <div class="hidden-content" style="display:none;">
                <Content />
              </div>
              <div class="card-icon">
                <i class={data.icon}></i>
              </div>
              <div class="card-content">
                <h4>{data.title}</h4>
                <p>{data.short}</p>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</Layout>