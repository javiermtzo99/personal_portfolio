---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="about">
    <div class="about-content">
      <h2>About</h2>
      <hr />
      <p>
        I'm a passionate Data Professional living in Vancouver...
      </p>

      <h3>What I do!</h3>
      <div class="about-content-all-cards">
        <div class="about-content-card">
          <div class="card-icon">
            <i class="fas fa-database"></i>
          </div>
          <div class="card-content">
            <h4>Data Engineering</h4>
            <p>Building responsive and modern data pipelines and workflows.</p>
          </div>
        </div>
        <div class="about-content-card">
          <div class="card-icon">
            <i class="fas fa-flask"></i>
          </div>
          <div class="card-content">
            <h4>Machine Learning</h4>
            <p>Designing data models, predictive analyses, and ML solutions.</p>
          </div>
        </div>
        <div class="about-content-card">
          <div class="card-icon">
            <i class="fas fa-sitemap"></i>
          </div>
          <div class="card-content">
            <h4>Data Architecture</h4>
            <p>Planning and structuring data solutions for scalability.</p>
          </div>
        </div>
        <div class="about-content-card">
          <div class="card-icon">
            <i class="fas fa-code"></i>
          </div>
          <div class="card-content">
            <h4>Software Engineering</h4>
            <p>Building responsive and modern web applications using best practices.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>